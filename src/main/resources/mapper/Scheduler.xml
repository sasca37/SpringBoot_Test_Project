<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mainline.magic.scheduler.dao.ScheduleDao">
	<select id="getConTrigger" resultType="Integer">
		SELECT COUNT(*) FROM QRTZ_CRON_TRIGGERS
	</select>
	
	<select id="getTermsJob" resultType="Terms">
		SELECT * FROM MCP_TERMS_JOB
		WHERE STATE = 0
	</select>
	
	<select id="getSchedulerState" resultType="Map">
		 SELECT * FROM QRTZ_SCHEDULER_STATE
		 where #{date} <![CDATA[< ]]>LAST_CHECKIN_TIME
	</select>
	<update id="setSchedulerState">
		UPDATE MCP_TERMS_JOB SET STATE = #{state}, START_DATE = SYSDATE 
		WHERE SEQ = SEQ
	</update>
</mapper>